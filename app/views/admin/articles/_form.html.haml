= form_for ["admin", @article] do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
    %br
    = f.collection_select(:article_type_id, ArticleType.all, :id, :name)
    %br
    = f.label :body
    = f.cktext_area :body
  .actions
    = f.submit 'Save'
