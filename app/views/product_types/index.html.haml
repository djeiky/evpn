%h3.blue-text Наши тарифы
=link_to "Оформить заказ", orders_path, :method => :post, :class => "btn btn-default"
- @product_types.each do |type|
  .panel.panel-default
    .panel-heading
      %b.blue-text
        =type.name
    .panel-body
      -type.product_items.each do |item|
        = form_tag cart_items_path do
          .row
            = hidden_field_tag :product_item_id, item.id
            .col-md-6
              = item.name
            .col-md-1
              = item.cost
            .col-md-3
              - cnt = @cart_items.detect {|it| it[:product_item_id] == item.id} ? @cart_items.detect{|it| it[:product_item_id] == item.id}.count : 0
              = number_field_tag :count, "#{cnt}"
            .col-md-1
              = submit_tag "В Корзину"

