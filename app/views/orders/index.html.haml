%table.table.table-default
  %th № счета
  %th Дата выставления
  %th Статус
  %th
  - @orders.each do |order|
    %tr
      %td
        = order.id
      %td
        = order.created_at
      %td
        - if order.paid
          %b{:style => "color: green;"}
            оплачен
        - else
          %b{:style => "color: red;"}
            не оплачен
      %td
        = link_to "Смотреть счет", order_path(order)
